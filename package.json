{
  "name": "ihelper-resource-library",
  "version": "0.1.0",
  "description": "A free, community-driven resource library for entrepreneurs and learners",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.ts,.tsx",
    "format": "prettier --write \"src/**/*.{vue,js,ts,json,md}\"",
    "test": "vitest",
    "audit": "node scripts/content_audit.js",
    "prepare": "husky install",
    "benchmark": "node --experimental-vm-modules scripts/performance-benchmark.js",
    "benchmark:ci": "node --experimental-vm-modules scripts/performance-benchmark.js --ci",
    "benchmark:compare": "node scripts/compare-benchmarks.js",
    "verify:content": "node --experimental-vm-modules scripts/content_verification.js",
    "diagnostic": "node --experimental-vm-modules scripts/diagnostic.js",
    "test:minimal": "node --experimental-vm-modules scripts/minimal_test.js",
    "populate:content": "node --experimental-vm-modules scripts/content_populator.js",
    "index:content": "node --experimental-vm-modules scripts/content_indexer.mjs"
  },
  "keywords": [
    "resource-library",
    "entrepreneurship",
    "learning",
    "community"
  ],
  "author": "iHelper Community",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "fuse.js": "^6.6.2",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.11",
    "prettier": "^3.0.3",
    "vite": "^4.4.9",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "src/**/*.{vue,js,ts,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ihelper-resource-library"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ihelper-resource-library/issues"
  }
}
