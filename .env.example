# CloudFlare Configuration
# Required for SSL and DNS management
CLOUDFLARE_API_TOKEN=your_api_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here

# SMTP Configuration
# Required for email notifications
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Domain Configuration
DOMAIN=ihelper.tech
SUBDOMAIN_WWW=www.ihelper.tech
SUBDOMAIN_API=api.ihelper.tech

# Security Settings
NODE_ENV=production
SSL_MIN_VERSION=TLS1.2
HSTS_MAX_AGE=31536000

# Monitoring Configuration
ALERT_EMAIL=admin@ihelper.tech
CHECK_INTERVAL=300000  # 5 minutes in milliseconds
ERROR_THRESHOLD=0.02   # 2%
LATENCY_THRESHOLD=2000 # 2 seconds

# Content Migration
CONTENT_SOURCE_DIR=content/source
CONTENT_TARGET_DIR=content/processed
BACKUP_ENABLED=true
VALIDATE_CONTENT=true

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900000 # 15 minutes in milliseconds
API_TIMEOUT=30000      # 30 seconds

# Cache Configuration
CACHE_TTL=14400       # 4 hours in seconds
CACHE_STALE_TTL=300   # 5 minutes for stale-while-revalidate

# Note: Replace all values with your actual configuration
# DO NOT commit the actual .env file to version control
