# Vite Environment Configuration
VITE_ENVIRONMENT=development
VITE_PERFORMANCE_MODE=standard

# Application Configuration
APP_NAME=iHelper Resource Library
APP_DOMAIN=ihelper.tech
APP_URL=https://ihelper.tech
APP_PORT=3000

# CloudFlare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Deployment Configuration
NODE_ENV=development
SSL_MIN_VERSION=TLS1.2
HSTS_MAX_AGE=31536000

# Performance Optimization
LAZY_LOAD_THRESHOLD=0.5
PREFETCH_ENABLED=true
CACHE_STRATEGY=aggressive

# Resource Indexing
RESOURCE_INDEX_PATH=./resources
RESOURCE_SCAN_INTERVAL=3600000  # 1 hour
MAX_RESOURCE_SIZE_MB=50

# Search Configuration
SEARCH_ALGORITHM=fuzzy
SEARCH_MAX_RESULTS=100
SEARCH_RELEVANCE_THRESHOLD=0.6

# Accessibility Settings
ACCESSIBILITY_MODE=enhanced
HIGH_CONTRAST_DEFAULT=false
FONT_SIZE_DEFAULT=medium
REDUCED_MOTION_DEFAULT=false

# Error Tracking
ERROR_REPORTING_ENABLED=true
ERROR_SAMPLING_RATE=0.1  # 10% of errors
MAX_ERROR_LOG_SIZE_MB=100

# Monitoring Configuration
MONITORING_ENABLED=true
PERFORMANCE_CHECK_INTERVAL=300000  # 5 minutes
ERROR_THRESHOLD=0.02   # 2%
LATENCY_THRESHOLD=2000 # 2 seconds

# Security Configuration
CONTENT_SECURITY_POLICY=strict
XSS_PROTECTION=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000  # 15 minutes

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_MAX_SIZE=10485760  # 10 MB

# Caching Configuration
CACHE_TTL=14400       # 4 hours
CACHE_STALE_TTL=300   # 5 minutes
REDIS_CACHE_URL=redis://localhost:6379

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
NOTIFICATION_EMAIL=admin@ihelper.tech

# Analytics (Optional)
ANALYTICS_PROVIDER=plausible
ANALYTICS_DOMAIN=ihelper.tech

# Feature Flags
FEATURE_GLOBAL_SEARCH=true
FEATURE_RESOURCE_UPLOAD=true
FEATURE_DARK_MODE=true

# External API Keys (Keep Secret!)
GITHUB_API_TOKEN=your_github_token
UNSPLASH_API_KEY=your_unsplash_key

# Note: 
# 1. Never commit actual secrets to version control
# 2. Use environment-specific .env files
# 3. Rotate secrets periodically
