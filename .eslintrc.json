{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true,
    "vitest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-essential"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "warn",
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used" }],
    "vue/multi-word-component-names": "off",
    "vue/no-multiple-template-root": "error",
    "vue/require-default-prop": "error",
    "vue/prop-name-casing": ["error", "camelCase"]
  },
  "settings": {
    "vue": {
      "version": "detect"
    }
  }
}
